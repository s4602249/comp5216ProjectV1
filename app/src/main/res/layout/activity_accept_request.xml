<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top|center_horizontal"
    tools:context=".shoppingRequest.AcceptRequestActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:backgroundTint="#FFFFFF"
            android:layout_alignParentStart="true"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios"
            tools:ignore="SpeakableTextPresentCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Request Details"
            android:textSize="35sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/requestTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Title"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:text="Item"
            android:layout_weight="2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:text="Price"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/itemDescription1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:text="-"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/price1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:text="-"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/itemDescription2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:text="-"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/price2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:layout_weight="1"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">>

        <TextView
            android:id="@+id/itemDescription3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:layout_weight="2"
            android:text="-"/>

        <TextView
            android:id="@+id/price3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:layout_weight="1"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:text="Total Price"/>

        <TextView
            android:id="@+id/textViewTotalPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:text="Price"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:text="Create Time"/>

        <TextView
            android:id="@+id/textViewCreateTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:text="Time"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:text="Due Time"/>

        <TextView
            android:id="@+id/textViewDueTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:text="Time"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:text="Status"/>

        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:layout_weight="2"
            android:text="Status"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Request Creator Information"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:text="Address"/>

        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:layout_weight="2"
            android:text="Address"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:text="Phone Number"/>

        <TextView
            android:id="@+id/textViewCreatorPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:layout_weight="2"
            android:text="Number" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Request Acceptor Information" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:text="Acceptor"/>

        <TextView
            android:id="@+id/textViewAcceptorName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:layout_weight="2"
            android:text="None"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:text="Phone Number"/>

        <TextView
            android:id="@+id/textViewAcceptorPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="3sp"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeStepGranularity="1sp"
            android:maxLines="1"
            android:layout_weight="2"
            android:text="None"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnAccept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#4E8015"
        android:text="Accept the request"
        tools:ignore="TextContrastCheck"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp" />

</LinearLayout>









